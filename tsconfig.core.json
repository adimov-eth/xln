{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "bun"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["xln.ts", "runtime/**/*.ts"],
  "exclude": [
    "node_modules",
    "brainvault/**/*",
    "runtime/scenarios/**/*",
    "runtime/scenarios-api.ts",
    "runtime/scripts/**/*",
    "runtime/typechain/**/*",
    "runtime/runtime-check.js",
    "runtime/server-bundle.js",
    "runtime/cli.ts",
    "scripts/**/*",
    "**/*.test.ts"
  ]
}
