{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "bun"],
    "allowImportingTsExtensions": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false
  },
  "include": [
    "brainvault/**/*.ts",
    "runtime/scenarios/**/*.ts",
    "runtime/scripts/**/*.ts",
    "runtime/cli.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "runtime/typechain/**/*"
  ]
}
